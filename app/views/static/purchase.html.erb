<% provide(:title, 'Торги') %>
<div class="row">

  <div class="col-md-2">


    <ul class="nav nav-pills nav-stacked">
      <li class="active">
        <a href="#">
          <span class="badge pull-right"><%= @purchase.length %></span>
          Все
        </a>
      </li>
      <li><a href="#"></a></li>


    </ul></div>
  <div class="col-md-10">

    <table class="table table-hover table-bordered ">
      <thead>
      <tr>
        <th>№ торгов</th>
        <th>Контрагент</th>
        <th>Дата начала</th>
        <th>Дата окончания</th>
        <th>Ссылка</th>
        <th>Примечание</th>
        <th>Статус</th>
      </tr>
      </thead>

      <tbody>
      <% @purchase.each do |p|%>

      <tr>
        <td><%= p.purchaseName %></td>
        <td><a href="/client/<%= p.client.try(:ClientId) %>"><%= p.client.try(:ClientName) %></a></td>
        <td><%= p.purchaseDateStart %></td>
        <td><%= p.purchaseDateEnd %></td>
        <td><%= p.purchaseLink %></td>
        <td><%= p.purchaseNote %></td>
        <td><span class="label <%= p.purchase_status.try(:psColor) %>"><%= p.purchase_status.try(:psName) %></span></td>
      </tr>

      <% end%>

      </tbody>
    </table>


  </div>
</div>